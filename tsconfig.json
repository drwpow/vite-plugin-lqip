{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"declaration": true,
		"inlineSourceMap": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"outDir": "dist",
		"rootDir": "src",
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext"
	},
	"include": ["src"],
	"exclude": ["node_modules/**"]
}
